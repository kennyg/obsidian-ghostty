{
  "name": "obsidian-ghostty",
  "version": "0.1.0",
  "description": "Ghostty-powered terminal view for Obsidian",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "bun esbuild.config.mjs",
    "build": "bun esbuild.config.mjs --production",
    "build:pty:electron": "node-gyp rebuild --runtime=electron --target=37.6.0 --dist-url=https://electronjs.org/headers --directory node_modules/node-pty"
  },
  "dependencies": {
    "ghostty-web": "^0.4.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "esbuild": "^0.20.2",
    "obsidian": "^1.5.7",
    "typescript": "^5.4.5"
  }
}
